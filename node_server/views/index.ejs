<!DOCTYPE html>
<html ng-app="ToDoApp">
<head>
  <title>Tom's ToDos</title>
  <link rel="stylesheet" type="text/css" href="styles/main.css"></link>
  <script src="bower_components/jquery/dist/jquery.js"></script>
  <script src="bower_components/jquery-validation/dist/jquery.validate.js"></script>
  <script src="bower_components/angular/angular.js"></script>
  <script src="bower_components/angular-resource/angular-resource.js"></script>
  <script src="js/AngularApp.js"></script>
  <script src="js/task.js"></script>
  <script src="js/jqueryFunctions.js"></script>
</head>
<body ng-controller="ToDoAppController">

  <section id='wrapper600'>
    <header id='newtask'>
      <form name="taskform" id="taskform" novalidate>
        New Task: <input ng-model="newTask" type="text" name="tasktext" placeholder="What do you want to do today?" required>
        <button id="createtask" ng-click="taskform.$valid && addNewTask()">Add to list</button>
      </form>
    </header>
    
    <section id='tasklist'>
      <ul ng-repeat="item in items | filter:showTasks" id="item">
        <li class="taskline" ng-class="{completed: completed}"><input ng-model="completed" ng-change="changeCompletionStatus(item)"type="checkbox">{{item.title}} {{item.isCompleted}}<button id="delete" ng-click="deleteTask(item)">X</button></li>
      </ul>
      <p ng-model="remaining">{{remainingTasks()}}</p>
    </section>

    <footer id='buttons'>
      <button id="showall" ng-click="show='All'">All</button>
      <button id="showactive" ng-click="show='Active'">Active</button>
      <button id="showcompleted" ng-click="show='Complete'">Complete</button>
      <button id="deleteall" ng-click="deleteAllTasks()">Clear All</button>
    </footer>
  </section>

</body>
</html>